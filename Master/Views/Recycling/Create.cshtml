@model RecyclingRequestVm

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="text-center">طلب إعادة تدوير جديد</h3>
                </div>
                <div class="card-body">
                    <form id="recyclingForm" enctype="multipart/form-data">
                        <!-- الخطوة 1: معلومات العنصر -->
                        <div class="step" data-step="1">
                            @await Html.PartialAsync("_ItemInfoStep", Model)
                        </div>

                        <!-- الخطوة 2: معلومات التسليم -->
                        <div class="step d-none" data-step="2">
                            @await Html.PartialAsync("_DeliveryStep", Model)
                        </div>

                        <!-- الخطوة 3: الدفع والتأكيد -->
                        <div class="step d-none" data-step="3">
                            @await Html.PartialAsync("_PaymentStep", Model)
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="button" class="btn btn-outline-secondary" id="prevBtn" style="display:none;">السابق</button>
                            <button type="button" class="btn btn-success ms-auto" id="nextBtn">التالي</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/recycling-form.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
}
