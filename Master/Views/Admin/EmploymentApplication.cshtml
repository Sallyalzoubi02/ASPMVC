@model IEnumerable<Master.Models.EmploymentApplication>

@{
    ViewData["Title"] = "طلبات التوظيف";
    Layout = "_AdminLayout";
}

@section Styles {
    <style>
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 1rem;
            background-color: #fff;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(33, 40, 50, 0.15);
            border-radius: 0.35rem;
            overflow: hidden;
        }

            .table th {
                background-color: #d1e7dd;
                color: #0f5132;
                padding: 1rem;
                text-align: right;
                vertical-align: middle;
                border-bottom: 2px solid #198754;
            }

            .table td {
                padding: 0.75rem;
                vertical-align: middle;
                border-top: 1px solid #dee2e6;
            }

            .table tr:hover {
                background-color: rgba(25, 135, 84, 0.05);
            }

            .table a {
                color: #198754;
                text-decoration: none;
                margin: 0 5px;
            }

                .table a:hover {
                    color: #0f5132;
                    text-decoration: underline;
                }

        td img {
            width: 100px;
        }
    </style>
}


<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0 text-success">
        <i class="fas fa-users me-2"></i>@ViewData["Title"]
    </h2>

</div>
@if (TempData["ToastrMessage"] != null)
{
    <div class="alert alert-@TempData["ToastrType"]">
        @TempData["ToastrMessage"]
    </div>
      
}

@if (TempData["ErrorMessage"] != null)
{
    
}
<table class="table">
    <thead>
        <tr>
            <th>
                الاسم
            </th>
            <th>
                رقم الهوية
            </th>
            <th>
                الهاتف
            </th>
            <th>
                البريد الالكتروني
            </th>
            <th>
                المدينة
            </th>
            <th>
                الحي
            </th>
            <th>
                الخبرة
            </th>
            <th>
                الوظيفة
            </th>
            <th>
                الرسالة
            </th>
            <th>
                تاريخ التقديم
            </th>
            <th>
                حالة الطلب
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NationalId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.District)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExperienceYears)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MotivationText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationDate)
            </td>
            <td>
                    @if (item.Status == "Pending")
                    {
                        <form id="statusForm-@item.Id" asp-action="UpdateEmpStatus" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <select name="volstatus" class="form-select form-select-sm"
                                    onchange="this.form.submit()">
                                <option selected value="Pending">Pending</option>
                                <option value="مقبول">مقبول</option>
                                <option value="مرفوض">مرفوض</option>

                            </select>
                        </form>
                    }
                    else
                    {
                        <span class="badge @GetStatusBadgeClass(@item.Status)">@item.Status</span>
                    }
            </td>
            <td>
                <button class="btn btn-sm text-success reply-btn"
                        data-id="@item.Id"
                        data-email="@item.Email"
                        data-status="@item.Status"
                        data-toggle="modal"
                        data-target="#replyModal">
                    الرد
                </button>
            </td>
        </tr>
}
    </tbody>
</table>


<!-- Reply Modal -->
<div class="modal fade" id="replyModal" tabindex="-1" role="dialog" aria-labelledby="replyModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="replyModalLabel">إرسال رد</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="SendReply" method="post">
                <div class="modal-body">
                    <input type="hidden" name="id" id="applicationId" />
                    <input type="hidden" name="email" id="applicationEmail" />
                    <input type="hidden" name="status" id="applicationStatus" />

                    <div class="form-group">
                        <label>حالة الطلب:</label>
                        <input type="text" id="statusDisplay" class="form-control" disabled />
                    </div>

                    <div class="form-group">
                        <label>الرسالة:</label>
                        <textarea name="replyMessage" id="replyMessage" class="form-control" rows="5" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">إلغاء</button>
                    <button type="submit" class="btn btn-primary">إرسال</button>
                </div>
            </form>
        </div>
    </div>
</div>
@functions {
    string GetStatusBadgeClass(string status)
    {
        switch (status)
        {
            case "مقبول": return "bg-success";
            case "مرفوض": return "bg-danger";
            default: return "bg-secondary";
        }
    }
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // فتح المودال - النسخة المعدلة
            $(document).on('click', '.reply-btn', function() {
                try {
                    var $btn = $(this);
                    var id = $btn.data('id');
                    var email = $btn.data('email');
                    var status = $btn.data('status');

                    $('#applicationId').val(id);
                    $('#applicationEmail').val(email);
                    $('#applicationStatus').val(status);
                    $('#statusDisplay').val(status);
                    $('#replyMessage').val('');

                    var modal = new bootstrap.Modal(document.getElementById('replyModal'));
                    modal.show();
                } catch (e) {
                    console.error('Error opening modal:', e);
                    toastr.error('حدث خطأ في فتح نافذة الرد');
                }
            });

            // إرسال النموذج - النسخة المعدلة
            $('#replyModal form').on('submit', function(e) {
                e.preventDefault();

                try {
                    var form = $(this);
                    $.ajax({
                        url: form.attr('action'),
                        method: form.attr('method'),
                        data: form.serialize(),
                        beforeSend: function() {
                            $('#replyModal .btn-primary').prop('disabled', true);
                        },
                        success: function(response) {
                            if(response && response.success) {
                                $('#replyModal').modal('hide');
                                toastr.success(response.message || 'تم الإرسال بنجاح');
                                setTimeout(function() {
                                    location.reload();
                                }, 1500);
                            } else {
                                toastr.error(response.message || 'حدث خطأ غير متوقع');
                            }
                        },
                        error: function(xhr) {
                            toastr.error('خطأ في الاتصال بالخادم: ' + xhr.statusText);
                        },
                        complete: function() {
                            $('#replyModal .btn-primary').prop('disabled', false);
                        }
                    });
                } catch (e) {
                    console.error('Error submitting form:', e);
                    toastr.error('حدث خطأ في إرسال النموذج');
                    $('#replyModal .btn-primary').prop('disabled', false);
                }
            });
        });
    </script>
}