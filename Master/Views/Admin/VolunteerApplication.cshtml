@model IEnumerable<Master.Models.VolunteerApplication>

@{
    ViewData["Title"] = "طلبات التطوع";
    Layout = "_AdminLayout";
}

@section Styles {
    <style>
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 1rem;
            background-color: #fff;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(33, 40, 50, 0.15);
            border-radius: 0.35rem;
            overflow: hidden;
        }

            .table th {
                background-color: #d1e7dd;
                color: #0f5132;
                padding: 1rem;
                text-align: right;
                vertical-align: middle;
                border-bottom: 2px solid #198754;
            }

            .table td {
                padding: 0.75rem;
                vertical-align: middle;
                border-top: 1px solid #dee2e6;
            }

            .table tr:hover {
                background-color: rgba(25, 135, 84, 0.05);
            }

            .table a {
                color: #198754;
                text-decoration: none;
                margin: 0 5px;
            }

                .table a:hover {
                    color: #0f5132;
                    text-decoration: underline;
                }

        td img {
            width: 100px;
        }
    </style>
}


<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0 text-success">
        <i class="fas fa-users me-2"></i>@ViewData["Title"]
    </h2>
   
</div>
<table class="table">
    <thead>
        <tr>
            <th>
               الاسم
            </th>
            <th>
                الإيميل
            </th>
            <th>
                الهاتف
            </th>
            <th>
                العمر
            </th>
            <th>
                المدينة
            </th>
            <th>
               الحي
            </th>
            
            <th>
                ايام التفرغ
            </th>
            
            <th>
                الرسالة
            </th>
            <th>
                المهارات
            </th>
            <th>
                حالة الطلب
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.District)
                </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.AvailabilityDays)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.MotivationText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Skills)
            </td>
            <td>
                    @if (item.Status == "Pending")
                    {
                        <form id="statusForm-@item.Id" asp-action="UpdateVolStatus" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <select name="volstatus" class="form-select form-select-sm"
                                    onchange="this.form.submit()">
                                <option selected value="Pending">Pending</option>
                                <option value="مقبول">مقبول</option>
                                <option value="مرفوض">مرفوض</option>

                            </select>
                        </form>
                    }
                    else
                    {
                        <span class="badge bg-success">@item.Status</span>
                    }
            </td>
            <td>
                <a asp-action="reply" asp-route-id="@item.Id">Reply</a> 
                
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts {
    <script>
         document.addEventListener('DOMContentLoaded', function() {
            createAnimatedCircles();

        }
    </script>
}
