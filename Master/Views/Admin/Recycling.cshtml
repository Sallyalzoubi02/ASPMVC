@model IEnumerable<Master.Models.RecyclingRequest>

@{
    ViewData["Title"] = "التدوير";
    Layout = "_AdminLayout";
}



<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0 text-success">
            <i class="fas fa-shopping-cart me-2"></i>@ViewData["Title"]
        </h2>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-success">
                        <tr>
                            <th>رقم الطلب</th>
                            <th> مدفوع</th>
                            <th>اسم العنصر</th>
                            <th>نوع العنصر</th>
                            <th>الكمية</th>
                            <th>تاريخ التسليم</th>
                            <th>ملاحظات</th>
                            <th>العميل</th>
                            <th>الموقع</th>
                            <th>حالة الطلب</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>#@item.Id</td>
                                <td>@item.Payment?.Id</td>
                                <td>@item.MaterialName</td>
                                <td>@item.MaterialType</td>
                                <td>@item.Quantity</td>
                                <td>@item.RequestedDate</td>
                                
                                <td>@item.Notes</td>
                                <td>@item.User?.Name</td>
                                <td>
                                    @if (item.Latitude.HasValue && item.Longitude.HasValue)
                                    {
                                        <button class="btn btn-sm btn-outline-primary show-map-btn"
                                                data-latitude="@item.Latitude"
                                                data-longitude="@item.Longitude"
                                                data-location="@item.Location"
                                                data-toggle="modal"
                                                data-target="#mapModal">
                                            <i class="fas fa-map-marker-alt"></i> عرض الخريطة
                                        </button>
                                    }
                                    else
                                    {
                                        <span class="text-muted">لا توجد إحداثيات</span>
                                    }
                                </td>


                                <td>
                                    @if (item.DeliveryStatus == false)
                                    {
                                        <form id="statusForm-@item.Id" asp-action="UpdateDeliveryStatus" method="post">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <select name="delstatus" class="form-select form-select-sm"
                                                    onchange="this.form.submit()">
                                                <option selected value="false"> pindding</option>
                                                <option value="true">تم الاستلام</option>
                                            </select>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">@GetStatusText(@item.DeliveryStatus)</span>
                                    }
                                </td>
                               
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



@functions {
    string GetStatusBadgeClass(string status)
    {
        switch (status)
        {
            case "مكتمل": return "bg-success";
            case "قيد التجهيز": return "bg-primary";
            case "ملغي": return "bg-danger";
            default: return "bg-secondary";
        }
    }
}
@functions {
    string GetStatusText(bool? status)
    {
        switch (status)
        {
            case true: return "تم الاستلام";
            case false: return "لم يتم الاستلام";
            default: return "غير محدد";
        }
    }
}

<!-- Map Modal -->
<div class="modal fade" id="mapModal" tabindex="-1" role="dialog" aria-labelledby="mapModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="mapModalLabel">موقع التسليم</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="mapContainer" style="height: 500px; width: 100%;"></div>
                <div id="locationAddress" class="mt-2 font-weight-bold"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">إغلاق</button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>

        .no-image {
            width: 50px;
            height: 50px;
            background: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.8rem;
            color: #6c757d;
            border: 1px solid #dee2e6;
        }
    </style>
    <style>
        #mapContainer {
            height: 500px !important;
            width: 100% !important;
        }

        .leaflet-container {
            background: #fff !important;
        }
    </style>
}
@section Scripts {
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

    <script>
        // متغيرات عامة
        let map;
        let marker;

        // دالة لتهيئة الخريطة
        function initMap(lat, lng, location) {
            if (!map) {
                map = L.map('mapContainer', {
                    preferCanvas: true, // للأداء الأفضل مع العديد من العلامات
                    zoomControl: true
                }).setView([lat, lng], 15);

                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
                    maxZoom: 19
                }).addTo(map);
            } else {
                map.setView([lat, lng], 15);
            }

            // إزالة الماركر القديم إذا وجد
            if (marker) {
                map.removeLayer(marker);
            }

            // إضافة ماركر جديد مع أيقونة مخصصة
            const customIcon = L.icon({
                iconUrl: 'https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.7.1/images/marker-icon.png',
                iconSize: [25, 41],
                iconAnchor: [12, 41]
            });

            marker = L.marker([lat, lng], {icon: customIcon}).addTo(map)
                .bindPopup(`<b>${location}</b>`)
                .openPopup();

            $('#locationAddress').text(location);
        }

        // عند تحميل الصفحة
        $(document).ready(function() {
            // عند النقر على زر الخريطة
            $(document).on('click', '.show-map-btn', function() {
                const latitude = parseFloat($(this).data('latitude'));
                const longitude = parseFloat($(this).data('longitude'));
                const location = $(this).data('location');

                // تخزين البيانات في المودال قبل فتحه
                $('#mapModal').data('lat', latitude)
                            .data('lng', longitude)
                            .data('loc', location);
            });

            // عند فتح المودال
            $('#mapModal').on('shown.bs.modal', function() {
                const lat = $(this).data('lat');
                const lng = $(this).data('lng');
                const loc = $(this).data('loc');

                if (lat && lng) {
                    initMap(lat, lng, loc);
                }
            });

            // تنظيف عند إغلاق المودال
            $('#mapModal').on('hidden.bs.modal', function() {
                if (marker) {
                    map.removeLayer(marker);
                    marker = null;
                }
                $(this).removeData();
            });
        });
    </script>
}