@{
    ViewData["Title"] = "Cart";
}

@section Styles {
    <link rel="stylesheet" href="~/css/cart.css" />
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="payment-container p-4 bg-light rounded-3">
                <h3 class="text-center mb-4 fw-bold text-dark"><i class="fas fa-shopping-cart me-2"></i>إتمام الطلب</h3>

                <div class="row g-4">
                    <!-- قسم طرق الدفع -->
                    <div class="col-md-6">
                        <div class="payment-methods p-4 h-100 bg-white rounded-3 shadow-sm">
                            <h5 class="fw-bold mb-4 text-dark">اختر طريقة الدفع</h5>

                            <div class="row g-3">
                                <div class="col-6">
                                    <div class="payment-method p-3 active" onclick="selectPayment(this, 'credit')">
                                        <div class="d-flex align-items-center">
                                            <div class="payment-icon ms-3 bg-success text-white rounded-2 p-2">
                                                <i class="fab fa-cc-visa"></i>
                                            </div>
                                            <span class="fw-bold">بطاقة ائتمانية</span>
                                        </div>
                                        <input type="radio" name="paymentMethod" class="d-none" checked>
                                    </div>
                                </div>

                                <div class="col-6">
                                    <div class="payment-method p-3" onclick="selectPayment(this, 'cash')">
                                        <div class="d-flex align-items-center">
                                            <div class="payment-icon ms-3 bg-success text-white rounded-2 p-2">
                                                <i class="fas fa-money-bill-wave"></i>
                                            </div>
                                            <span class="fw-bold">الدفع عند الاستلام</span>
                                        </div>
                                        <input type="radio" name="paymentMethod" class="d-none">
                                    </div>
                                </div>
                            </div>

                            <!-- تفاصيل البطاقة -->
                            <div class="mt-4 pt-3" id="cardDetails">
                                <h6 class="fw-bold mb-3 text-dark">معلومات البطاقة</h6>

                                <div class="mb-3">
                                    <label class="form-label text-muted">رقم البطاقة</label>
                                    <input type="text" class="form-control" placeholder="1234 5678 9012 3456">
                                </div>

                                <div class="row g-2">
                                    <div class="col-md-8">
                                        <label class="form-label text-muted">اسم صاحب البطاقة</label>
                                        <input type="text" class="form-control" placeholder="الاسم كما هو مدون على البطاقة">
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label text-muted">CVV</label>
                                        <input type="password" class="form-control" placeholder="123">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- قسم ملخص الطلب مع إضافة كود الخصم -->
                    <div class="col-md-6">
                        <div class="payment-summary p-4 h-100 bg-white rounded-3 shadow-sm">
                            <h5 class="fw-bold mb-4 text-dark">ملخص الطلب</h5>

                            <!-- قسم كود الخصم الجديد -->
                            <div class="discount-section mb-4">
                                <h6 class="fw-bold mb-3">كود الخصم</h6>
                                <div class="discount-input-group">
                                    <input type="text" class="form-control discount-input" id="discountCode" placeholder="أدخل كود الخصم">
                                    <button class="btn apply-discount-btn" onclick="applyDiscount()">
                                        <i class="fas fa-tag me-1"></i>تطبيق
                                    </button>
                                </div>
                                <small id="discountMessage" class="text-muted mt-2 d-block"></small>
                            </div>

                            <div class="summary-item">
                                <div class="d-flex justify-content-between">
                                    <span class="text-muted">سعر المنتجات</span>
                                    <span class="fw-bold" id="subtotal">250.00 ر.س</span>
                                </div>
                            </div>

                            <div class="summary-item">
                                <div class="d-flex justify-content-between">
                                    <span class="text-muted">الخصم</span>
                                    <span class="fw-bold text-success" id="discountAmount">-0.00 ر.س</span>
                                </div>
                            </div>

                            <div class="summary-item">
                                <div class="d-flex justify-content-between">
                                    <span class="text-muted">رسوم الشحن</span>
                                    <span class="fw-bold" id="shipping">15.00 ر.س</span>
                                </div>
                            </div>

                            <div class="summary-item">
                                <div class="d-flex justify-content-between">
                                    <span class="text-muted">الضريبة</span>
                                    <span class="fw-bold" id="tax">12.50 ر.س</span>
                                </div>
                            </div>

                            <div class="border-top pt-3 mb-4">
                                <div class="d-flex justify-content-between fw-bold fs-5">
                                    <span>المجموع النهائي</span>
                                    <span class="text-success" id="total">277.50 ر.س</span>
                                </div>
                            </div>

                            <button class="btn btn-confirm w-100 text-white py-3" onclick="confirmOrder()">
                                <i class="fas fa-lock me-2"></i>تأكيد الطلب والدفع
                            </button>

                            <div class="text-center mt-3">
                                <small class="text-muted">
                                    <i class="fas fa-shield-alt me-2"></i>دفع آمن ومحمي بنظام SSL
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>